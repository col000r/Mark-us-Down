{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mark-us-Down",
  "version": "1.0.4",
  "identifier": "rocks.brightlight.markusdown",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3200"
  },
  "app": {
    "windows": [
      {
        "title": "Mark-us-Down",
        "width": 1200,
        "height": 800,
        "minWidth": 600,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "titleBarStyle": "Visible",
        "hiddenTitle": false,
        "decorations": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": "entitlements.plist",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        }
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "tsp": false,
      "wix": {
        "language": "en-US"
      }
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "fileAssociations": [
      {
        "ext": ["md", "markdown"],
        "name": "Markdown Document",
        "description": "Markdown text document",
        "role": "Editor",
        "mimeType": "text/markdown",
        "rank": "Owner"
      },
      {
        "ext": ["txt"],
        "name": "Text Document", 
        "description": "Plain text document",
        "role": "Editor",
        "mimeType": "text/plain",
        "rank": "Alternate"
      }
    ]
  }
}
